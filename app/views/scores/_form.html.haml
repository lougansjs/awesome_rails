= form_for @score do |f|
  - if @score.errors.any?
    #error_explanation
      %h2= "#{pluralize(@score.errors.count, "error")} prohibited this score from being saved:"
      %ul
        - @score.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :qa_points
    = f.number_field :qa_points
  .field
    = f.label :dev_points
    = f.number_field :dev_points
  .field
    = f.label :app_id
    = f.number_field :app_id
  .actions
    = f.submit 'Save'
